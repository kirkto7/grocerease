<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="edu.msoe.grocerease.fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/listFragment"
        android:name="edu.msoe.grocerease.fragments.ListFragment"
        tools:layout="@layout/fragment_list">
    </fragment>


    <fragment
        android:id="@+id/recipeFragment"
        android:name="edu.msoe.grocerease.fragments.RecipeFragment"
        android:label="Deals" />
    <fragment
        android:id="@+id/savedRecipesFragment"
        android:name="edu.msoe.grocerease.fragments.SavedRecipesFragment"
        android:label="Saved Recipes"
        tools:layout="@layout/fragment_saved_recipes" />
    <fragment
        android:id="@+id/recipeDetailFragment"
        android:name="edu.msoe.grocerease.fragments.RecipeDetailFragment"
        tools:layout="@layout/fragment_recipe_detail">

        <argument
            android:name="recipeId"
            app:argType="java.util.UUID" />
        <action
            android:id="@+id/action_recipeDetailFragment_to_listFragment"
            app:destination="@id/listFragment"/>
    </fragment>


</navigation>
